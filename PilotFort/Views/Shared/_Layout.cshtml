<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - @PilotFort.Classes.Application.Name</title>
	<link rel="icon" href="~/favicon.png" type="image/x-icon" />
	<link rel="shortcut icon" href="~/favicon.png" type="image/x-icon" />
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<img class="navbar-brand" src="~/favicon.png" alt="@PilotFort.Classes.Application.Name" />
				@Html.ActionLink(PilotFort.Classes.Application.Name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: #e3e3e3" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
				@if (Request.IsAuthenticated) {
					<li>@Html.ActionLink("Log", "Index", "Log")</li>
					<li>@Html.ActionLink("Hangar", "Index", "Hangar")</li>
				}
					<li>@Html.ActionLink("Crew", "About", "Home")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p style="float: right;">powered by <a href="https://sunrise-sunset.org/api">Sunrise Sunset</a></p>
			<p>&copy; @DateTime.Now.Year PilotFort LLC</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/js")
	@RenderSection("scripts", required: false)
</body>
</html>
